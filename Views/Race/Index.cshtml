@model IEnumerable<Race>

<div class="album py-5 bg-body-tertiary">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach (var race in Model)
            {
                <div class="col">
                    <div class="card shadow-sm">
                        <img class="bd-placeholder-img card-img-top" src="@race.Image" width="100%" height="225" alt="Card image cap" />
                        <div class="card-body">
                            <p class="card-text">@race.Title</p>
                            <p class="card-text">@race.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="Race" asp-action="Detail" asp-route-id="@race.Id" type="btn btn-success" class="btn btn-sm btn-outline-secondary">View</a>
                                    @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                                    {
                                        <a asp-controller="Race" asp-action="Edit" asp-route-id="@race.Id" type="btn btn-success" class="btn btn-sm btn-outline-info">Edit</a>
                                        <a type="button" class="btn btn-sm btn-outline-danger" asp-controller="Club" asp-action="Delete" asp-route-id="@race.Id">Delete</a>
                                    }
                                </div>
                                <small class="text-body-secondary">@race.RaceCategory</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>